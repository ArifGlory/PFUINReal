<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LatihanActivity"
    android:background="@drawable/gradient1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rela1">

        </RelativeLayout>

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progress_bar"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/kuningGelap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:layout_marginTop="10dp"/>


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/progress_bar"
        android:id="@+id/imgPlay"
        android:src="@drawable/question"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soal"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@+id/imgPlay"
        android:layout_marginTop="15dp"
        android:id="@+id/txtSoal"
        android:textColor="@color/white_greyish"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lineBtn"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtSoal"
        android:layout_centerHorizontal="true">


        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/buttonGame"
            android:text="Jawaban A"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnJwbA"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/buttonGame"
            android:text="Jawaban B"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnJwbB"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/buttonGame"
            android:text="Jawaban C"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnJwbC"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/buttonGame"
            android:text="Jawaban D"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnJwbD"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/buttonGame"
            android:text="Jawaban E"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnJwbE"/>

    </LinearLayout>






</RelativeLayout>
</ScrollView>